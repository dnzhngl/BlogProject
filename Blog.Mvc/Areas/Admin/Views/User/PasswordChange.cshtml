@model Blog.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Şifre Değiştirme İşlemleri";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> @ViewBag.Title</h4>
            </div>
            <div class="card-body">
                @* enctype="multipart/form-data" : form içerisinde hem normal verileri hemde yükleyeceğimiz resme ait verileribirlikte göndermek istiyoruz. Burada bizden farklı dosyalar bekleyeceğini söylemiş oluyoruz.  *@
                <form asp-controller="User" asp-action="PasswordChange" method="post">

                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Lütfen, şu anki şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" class="form-control" asp-for="NewPassword" placeholder="Lütfen, yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Lütfen, tekrardan yeni şifrenizi giriniz." />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    
                    <div class="form-group">
                        @*<a class="btn btn-danger btn-block text-white" onclick="history.back()"><span class="fas fa-times"></span> İptal</a>*@
                        <a class="btn btn-danger btn-block text-white" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
